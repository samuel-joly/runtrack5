{% extends 'base.html.twig' %}

{% block title %}My Entreprise Projects{% endblock %}

{% block body %}
    
    <p class='h2 text-center text-white'>Nos projets</p>
    <div class='row d-flex justify-content-center mt-2'>
        {% for projet in projets %}
            <div class="card col-3 bg-secondary m-1" style="max-width: 20rem;">
                <div class="card-header d-flex justify-content-between align-items-center">
                    {{projet.title}}
                    <small class='badge'>{{projet.createdAt|date("d/m/Y")}}</small>
                </div>
                        <div class="card-body">
                            <img src='{{ asset(projet.image) }}' style='width:100%;'/>
                            <p class="card-text">{{projet.content}}</p>
                        </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
